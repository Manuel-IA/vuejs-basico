rCase().includes(this.filter.toLowerCase())\n        )\n        .sort((a, b) => {\n          if (parseInt(a.rank) > parseInt(b.rank)) {\n            return this.sortOrder\n          }\n\n          return altOrder\n        })\n    }\n  },\n\n  methods: {\n    goToCoin(id) {\n      this.$router.push({ name: 'coin-detail', params: { id } })\n    },\n\n    changeSortOrder() {\n      this.sortOrder = this.sortOrder === 1 ? -1 : 1\n    }\n  }\n}\n</script>\n\n<style scoped>\n.up::before {\n  content: 'ðŸ‘†';\n}\n\n.down::before {\n  content: 'ðŸ‘‡';\n}\n\ntd {\n  padding: 20px 0px;\n  font-size: 0.6rem;\n  text-align: center;\n}\n\nth {\n  padding: 5px;\n  font-size: 0.6rem;\n}\n\n@media (min-width: 640px) {\n  td,\n  th {\n    padding: 20px;\n    font-size: 1rem;\n  }\n\n  th {\n    padding: 12px;\n  }\n}\n</style>\n"]}]}